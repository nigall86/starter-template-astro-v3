---
import { Icon } from 'astro-icon';

interface Props {
  type?: string;
}

const { type } = Astro.props;
---

<a class='logo' data-type={type} href='/'>
  <Icon name='logo' alt='Logo of the company' />
</a>

<style>
  .logo {
    --_logo-size-header: var(--size-12);
    --_logo-color-header: hsl(var(--accent-5));
    --_logo-size-footer: var(--size-10);
    --_logo-color-footer: hsl(var(--neutral-0));

    &[data-type='header'] {
      width: var(--_logo-size-header);
      fill: var(--_logo-color-header);
    }

    &[data-type='footer'] {
      width: var(--_logo-size-footer);
      fill: var(--_logo-color-footer);
    }
  }
</style>
