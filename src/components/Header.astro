---
import { Image } from 'astro:assets';

import Nav from '../components/Nav.astro';
import logo from '../images/logo.svg';
---

<header class='site-header'>
  <div class='container'>
    <div class='site-header__inner'>
      <a href="/"><Image src={logo} alt="Logo of the company"/></a>
      <Nav />
    </div>
  </div>
</header>

<!-- * Style * -->
<style lang='scss'>

.site-header {
  --_header-margin: 0;
  --_header-padding: var(--size-8) 0;
  --_header-bg: var(--surface-2);

  margin: var(--_header-margin);
  padding: var(--_header-padding);
  background-color: var(--_header-bg);
  color: var(--text-1);

  &__inner {
    display: flex;
    gap: var(--size-4);
    align-items: center;
    justify-content: space-between;
  }
}
</style>
