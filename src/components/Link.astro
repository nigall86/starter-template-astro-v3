import { Icon } from 'astro-icon';
import { Sprite } from 'astro-icon';

interface Props {
  type: 'button' | 'input' | 'link';
  text: string;
  href?: string;
  style: 'accent' | 'primary';
  input?: {
    type: string;
  };
  icon?: {
    name?: string;
    side: 'left' | 'right';
  };
  isFilled?: boolean;
  borderVisible?: boolean;
  classes?: string;
}

const {
  type = 'button',
  text,
  href,
  style,
  input,
  icon,
  isFilled = true,
  borderVisible = false,
  classes,
  ...rest
} = Astro.props as Props;
---

{
  type === 'button' && (
    <button
      data-type={dataType}
      type={btnType}
      aria-label={ariaLabel}
      title={title}
      class={className}
      {autofocus}
      {disabled}
      {value}
      onclick={onClick}
    >
      {
        icon && icon.side === 'left' && (
          
        )
      }
    </button>
  )
}

{
  type === 'input' && (
    <>
      <input
        type={btnType}
        aria-label={ariaLabel}
        class={className}
        {autofocus}
        {disabled}
        {value}
      />
      <slot />
    </>
  )
}

{
  type === 'link' && (
    <a data-type={dataType} href={href}>
      <slot />
    </a>
  )
}
