---
// component imports
import Link from './Link.astro';

// data imports
import navData from '../data/navData';
---

<nav class='site-nav' aria-label='primary navigation'>
  <ul class='site-nav__list' data-visible='false'>
    {
      navData.map((item) => (
        <li>
          <Link type='link' title={item.name} href={item.path} data-navlink />
        </li>
      ))
    }
  </ul>
</nav>

<Link
  type='button'
  style='btn-icon'
  classes='mobile-nav-toggle'
  aria-controls='navigation'
  aria-expanded='false'
>
  <svg
    role='img'
    class='mobile-nav-toggle__icon'
    style='--stroke-color: var(--text-1)'
  >
    <use id='nav-icon' href='#icon-menu'></use>
  </svg>
  <span class='sr-only'>Menu</span>
</Link>

<script>
  import '../js/nav.js';
</script>
