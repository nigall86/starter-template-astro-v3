---
import { Image } from 'astro:assets';

import logo from '../images/logo.svg';

export interface Props {
  links: string[];
}

const { links } = Astro.props as Props;
---

<footer class='footer'>
  <div class='container'>
    <div>
      <h3>Astro</h3>
      <p>
        This is a demo website to show how the Astro framework works. Visit the <a
          href='https://astro.build'>official website</a
        > to learn more.
      </p>
    </div>
    <div>
      <h3>Links</h3>
      <ul>
        <li><a href='/'>Home</a></li>
        {
          links.map((link) => (
            <li>
              <a href={`/${link}`}> {link} </a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</footer>

<!-- Style / Using SCSS -->
<style lang='scss'>
  @use '../sass/abstracts' as *;
</style>
