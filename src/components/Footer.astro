---
import { Image } from 'astro:assets';

import logo from '../images/logo.svg';

export interface Props {
  links: string[];
}

const { links } = Astro.props as Props;
---

<footer class='footer'>
  <div class='container'>
    <div>
      <h3>Astro</h3>
      <p>
        This is a demo website to show how the Astro framework works. Visit the <a
          href='https://astro.build'>official website</a
        > to learn more.
      </p>
    </div>
    <div>
      <h3>Links</h3>
      <ul>
        <li><a href='/'>Home</a></li>
        {
          links.map((link) => (
            <li>
              <a href={`/${link}`}> {link} </a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>

  <!-- Theme switcher -->
  <fieldset
  class="theme-switcher | flex-group | mx-auto | margin-block-start-10 | clr-accent-100"
>
  <legend class="">Theme:</legend>

  <div class="theme-switcher__options flex-group">
    <div class="theme-switcher__option-group">
      <input
        id="system"
        class="theme-switcher__input"
        name="theme"
        type="radio"
        checked
      />
      <label for="system" class="theme-switcher__label clr-accent-100"
        >System</label
      >
    </div>

    <div class="theme-switcher__option-group">
      <input
        id="light"
        class="theme-switcher__input"
        name="theme"
        type="radio"
      />
      <label for="light" class="theme-switcher__label clr-accent-100"
        >Light</label
      >
    </div>

    <div class="theme-switcher__option-group">
      <input
        id="dark"
        class="theme-switcher__input"
        name="theme"
        type="radio"
      />
      <label for="dark" class="theme-switcher__label clr-accent-100"
        >Dark</label
      >
    </div>
  </div>
</fieldset>
</footer>

<!-- Style / Using SCSS -->
<style lang='scss'>
  @use '../sass/abstracts' as *;
</style>
